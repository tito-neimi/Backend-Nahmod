<div class="d-flex justify-content-center align-items-center h-100">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img alt={{item.title}} class="img-fluid rounded-start" src={{item.thumbnail}}  >
      </div>
      <div class="col-md-8">
        <div class="card-body" id="div-body">
          <h5 class="card-title">{{item.title}}</h5>
          <h5 class="card-text">${{item.price}}</h5>
          <p class="card-text">{{item.description}}</p>
          <div class="row justify-content-center">
            <div class="col-auto">
              <button onclick="increase()" class="btn btn-primary">+</button>
            </div>
            <div class="col-auto">
              <p id="counter" class="h2">1</p>
            </div>
            <div class="col-auto">
              <button onclick="decrease()" class="btn btn-primary">-</button>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-primary" id="addButton" onclick='addProductToCart("{{item._id}}")'>Add to cart</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
