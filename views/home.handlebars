<h2 class="text-center my-5">Productos</h2>
  <form class="filtros d-flex gap-2 w-100 m-3" id="filters">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="-1">
      <label class="form-check-label" for="inlineRadio1">Mayor a menor</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="1">
      <label class="form-check-label" for="inlineRadio2">Menor a Mayor</label>
    </div>
    <select class="form-select form-select-sm" style="width: 200px;" aria-label="Small select example" id="filterSelected">
      <option selected value="null">All</option>
      <option Â¿ value="jewelery">joyas</option>
      <option value="women's clothing">Ropa de mujer</option>
      <option value="men's clothing">Ropa de hombre</option>
    </select>
    <button class="btn btn-primary" type="button" id="submitFilters">Go</button>
  </form>
<div id="products" class="d-flex flex-wrap justify-content-center mb-5">
  {{#each productos}}
  <div class="card m-2" style="width: 18rem;">
  <img src={{this.thumbnail}} class="card-img-top img-fluid" alt={{this.title}}>
  <div class="card-body">
    <h4 class="card-title">{{this.title}}</h4>
    <h5 class="card-text">${{this.price}}</h5>
    <p class="card-text">{{this.description}}</p>
    <a href="/api/products/{{this._id}}" class="text-center w-100 btn btn-primary">See</a>
    </div>
    </div>
      {{/each}}
  </div>
